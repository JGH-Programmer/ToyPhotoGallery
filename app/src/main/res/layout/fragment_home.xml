<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/HomeFragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager2.widget.ViewPager2>


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/HomeFragmentIndicator"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="5dp"
        android:paddingTop="30dp"
        app:ci_drawable="@drawable/black_radius"
        app:ci_gravity="center_vertical"
        app:ci_height="7dp"
        app:ci_width="7dp"
        app:layout_constraintBottom_toTopOf="@+id/FragmentHomeTextView"
        app:layout_constraintEnd_toEndOf="@id/HomeFragmentViewPager"
        app:layout_constraintStart_toStartOf="@id/HomeFragmentViewPager"
        app:layout_constraintTop_toBottomOf="@+id/HomeFragmentViewPager">

    </me.relex.circleindicator.CircleIndicator3>

    <TextView
        android:id="@+id/FragmentHomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/HomeFragmentDog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentHomeTextView">

    </ImageView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeFragmentDog">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>